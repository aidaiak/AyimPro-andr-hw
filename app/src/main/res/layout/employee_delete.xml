<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFFBFD"
    android:layout_marginTop="200dp"
    android:layout_marginBottom="200dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/delete_txt"
        android:text="Please, confirm deletion"
        android:textSize="29sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_yes"
        android:text="Yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/delete_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete_no"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_no"
        android:text="No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/delete_txt"
        app:layout_constraintStart_toEndOf="@id/delete_yes"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>